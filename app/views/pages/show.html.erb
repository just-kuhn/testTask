<div class="container blog-main box text-center" id="@page_<%= @page.id %>">

	<div class="panel panel-info"><!-- Panel Info -->

		<div class="panel-heading">
			<h3 class="panel-title">
				<%= link_to page_path(@page) do %>
				<%= @page.title %>
				<% end %>
			</h3>
			<div style="color: #3BB2D6;"><%= time_ago_in_words(@page.created_at) %></div>
		</div>

		<div class="panel-body"><!-- Panel Body -->

			<p><%= @page.content %></p>
			<br>
			Categories:
			<% @page.categories.each do |category| %>
			 <%= category.name %>
			<% end %>  
			<br>
			<div class="btn-group" role="group" aria-label="...">
				<button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myupdatepage_<%= @page.id %>">
					Edit

				</button>
				<%= link_to 'Destroy', @page, method: :delete, class: "btn btn-danger", remote: true %>
			</div>
		</div><!-- Panel Body -->

	</div><!-- Panel Info -->


	<!-- Modal - update @pages -->
	<%= form_for(@page, :method => :put, remote: true) do |f| %>
	<div class="modal fade" id="myupdatepage_<%= @page.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="myModalLabel">Edit</h4>
				</div>
				<div class="modal-body">

					<div class="field">
						<%= f.label :title %><br>
						<%= f.text_area :title, class: "form-control" %>
					</div>
					<div class="field">
						<%= f.label :content %><br>
						<%= f.text_area :content, class: "form-control" %>
					</div>

				</div>
				<div class="modal-footer">
					<button type="button" id="myupdatebutton_<%= @page.id %>" class="btn btn-default" data-dismiss="modal">Close</button>
					<%= submit_tag "Update", class: "btn btn-primary" %>
				</div>
			</div>
		</div>
	</div>
	<% end %>
	<!-- Modal -->
</div>